extends layoutBS

block content
  center
    h1(species = 'cursive' ) Make your own post NOW!

  br
  br
  body
    form(method="post" action = "/savePost" species = 'font1')
      label.my-1.mr-2(for="inlineFormCustomSelectPref") Type of the post
      select(name="postType")#inlineFormCustomSelectPref.custom-select.my-1.mr-sm-2
        option(selected="") Choose...
        option(value="Public announcement") Public announcement
        option(value="Recruit information") Recruit information
        option(value="Housing information") Housing information
        option(value="Item Selling/Buying") Item Selling/Buying
        option(value="Others") Others

      label Enter Your 5-digit postcal code:
      input(name="code")#inputPassword5.form-control
      small#passwordHelpBlock.form-text.text-muted

      lable(for="exampleFormControlTextarea1") Main Content
      br
      textarea(name="content", rows = "8", cols="100", style="resize:none")

      .form-group
      label(for="exampleFormControlFile1") Upload your file here(Make sure to upload your post in form of PDF(2 pages maximum))
      input#exampleFormControlFile1.form-control-file(type="file")

      button.btn.btn-primary(type="submit") Submit
    hr
    form(method="post" action="/deletePost")
      ol
        each s in posts
          li
            input(name="deleteName" value=s._id type="checkbox")
            e #{s.type} --
            i #{s.code}
      input(type="submit" value="Delete checked items")
